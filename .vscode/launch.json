{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Node",
      "runtimeExecutable": "meteor",
      "runtimeArgs": [
        "run",
        "--port=4000",
        "--exclude-archs=web.browser.legacy,web.cordova",
        "--settings=settings.json",
        "--raw-logs",
        "--verbose"
      ],
      "env": {
        "CORS": "*",
        "CORS_ALLOW_HEADERS": "Authorization",
        "ROOT_URL": "http://localhost:4000",
        "WITH_API": "true",
        "RICHER_CARD_COMMENT_EDITOR": "false"
      },
      "console": "integratedTerminal",
      "port": 9229,
      "restart": true,
      "stopOnEntry": true,
      "continueOnAttach": true,
      "timeout": 60000
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Chrome",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Test: Node",
        "runtimeExecutable": "meteor",
        "runtimeArgs": [
          "test",
          "--inspect-brk=9229",
          "--port=4040",
          "--exclude-archs=web.browser.legacy,web.cordova",
          "--driver-package=meteortesting:mocha",
          "--settings=settings.json"
        ],
        "outputCapture": "std",
        "port": 9229,
        "timeout": 60000
    }
  ],
  "compounds": [
    {
      "name": "Node & Chrome",
      "configurations": ["Node", "Chrome"]
    }
  ]
}
