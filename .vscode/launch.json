{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Node",
      "runtimeExecutable": "meteor",
      "runtimeArgs": [
        "run",
        "--port=4000",
        "--exclude-archs=web.browser.legacy,web.cordova",
        "--settings=settings.json",
        "--raw-logs",
        "--verbose"
      ],
      "env": {
        "ROOT_URL": "http://localhost:4000",
        "WITH_API": "true",
        "RICHER_CARD_COMMENT_EDITOR": "false"
      },
      "console": "integratedTerminal",
      "port": 9229,
      "restart": true,
      "stopOnEntry": true,
      "continueOnAttach": true,
      "timeout": 60000
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Chrome",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Node & Chrome",
      "configurations": ["Node", "Chrome"]
    }
  ]
}
